<main>
  <p id="notice"></p>
  <div class='container'>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

    <div class='row'>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofoucus: true, id:"inputName", placeholder:"name"%>
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image,placeholder: "プロフィール画像",accept: "image/*"%>
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, autofoucus: true, id:"inputIntroduction", placeholder:"introduction"%>
      <%= f.submit "Update User"%>
      <% end %>
    </div>
  </div>
</main>